<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".details">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="372dp"
            android:layout_height="197dp"
            android:layout_margin="20dp"
            android:layout_marginTop="80dp"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="74dp"
                android:layout_height="68dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_profile" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/group73"
                tools:layout_editor_absoluteY="40dp" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="100dp"
                android:ems="10"
                android:hint="Time"
                android:inputType="time" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText6"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="130dp"
                android:ems="10"
                android:hint="Day"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText6"
                android:layout_alignBottom="@+id/editText7"
                android:layout_alignParentStart="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="130dp"
                android:ems="10"
                android:hint="DD/MM/YY"
                android:inputType="date" />

            <EditText
                android:id="@+id/editText11"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_alignStart="@+id/editText6"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="170dp"
                android:layout_marginTop="100dp"
                android:ems="10"
                android:hint="Subject Code"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText12"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText11"
                android:layout_alignBottom="@+id/editText8"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="170dp"
                android:layout_marginTop="130dp"
                android:layout_toEndOf="@+id/editText8"
                android:ems="10"
                android:hint="Lecture No"
                android:inputType="textPersonName" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="372dp"
            android:layout_height="107dp"
            android:layout_margin="20dp"
            android:layout_marginTop="80dp"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="185dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Course Details"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#2E5339"
                android:textColorHighlight="#2E5339"
                android:textColorHint="#2E5339"
                android:textColorLink="#2E5339" />

            <EditText
                android:id="@+id/editText11"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_alignStart="@+id/editText6"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:ems="10"
                android:inputType="textPersonName" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="372dp"
            android:layout_height="107dp"
            android:layout_margin="20dp"
            android:layout_marginTop="80dp"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="260dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Number of Students Enrolled :"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#2E5339"
                android:textColorHighlight="#2E5339"
                android:textColorHint="#2E5339"
                android:textColorLink="#2E5339" />

            <EditText
                android:id="@+id/editText11"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_alignStart="@+id/editText6"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:ems="10"
                android:inputType="number" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="372dp"
            android:layout_height="107dp"
            android:layout_margin="20dp"
            android:layout_marginTop="80dp"
            app:cardCornerRadius="30dp"
            app:cardMaxElevation="20dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="185dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="View Students"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#2E5339"
                android:textColorHighlight="#2E5339"
                android:textColorHint="#2E5339"
                android:textColorLink="#2E5339" />

            <EditText
                android:id="@+id/editText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/group72"
                android:layout_marginStart="320dp"
                android:layout_marginTop="30dp"/>


        </androidx.cardview.widget.CardView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>